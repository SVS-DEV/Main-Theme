{% paginate blogs[blog_name].articles by excerpts %}
{% for post in blogs[blog_name].articles %}
	<div class="post">
		{% if post.image %}
			<a href="{{ post.url }}"><img src="{{ post.image | img_url: "medium" }}" alt="{{ post.title }}"></a>
		{% endif %}
		<h4><a href="{{ post.url }}">{{ post.title }}</a></h4>
		{{ post.excerpt_or_content }}
	</div>
{% endfor %}
{% endpaginate %}