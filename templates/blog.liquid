<script>
  if(window.location.href.indexOf("tagged") > -1) {
    $( ".blog-tagged" ).show();
    $( ".blog-general" ).hide();
  }

  if (window.location.href.indexOf("speaker-topic") > -1) {
    $( "body" ).addClass( "speaker-topic" );
    $('.filtered-header').text('Speaker Related');
