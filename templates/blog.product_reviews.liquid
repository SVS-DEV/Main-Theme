{{ 'blog-index.css' | asset_url | stylesheet_tag }}
<div class="blog-index-wrap">
    <section>
        <div class="wrap">
            <div class="container-fluid">

                <div class="col-md-2 filter-wrap">
                    <h3> Filter Area </h3>
                    <ul class="hidden-sm hidden-xs">
                        <li> <a href="/blogs/svs/tagged/speaker-topic"> Speaker Topics </a> </li>
                        <li> <a href="/blogs/svs/tagged/subwoofer-topic"> Subwoofer Topics </li>
                        <li> <a href="/blogs/svs/tagged/system-set-up"> System Set-Up </li>
                        <li> <a href="/blogs/svs/tagged/sound-experts-advice"> Sound Experts Advice </li>
                        <li> <a href="/blogs/svs/tagged/audio-byte"> SVS Audio Bytes </li>
                    </ul>

                    <ul class="other-blogs hidden-sm hidden-xs">
                        <li> <a href="/blogs/artist-spotlight"> Featured Artist Systems </a> </li>
                        <li> <a href="/blogs/featured-systems"> Featured Customer Systems </a> </li>
                        <li> <a href="/pages/svs-videos"> SVS Videos </a> </li>
                    </ul>

                    <div class="readareviewholder hidden-md hidden-lg">
                        <span class="readareviewbutton" id="readareview" onclick="document.getElementById('productselectormobile').style.display = 'block';">SELECT PRODUCT REVIEWS</span>
                        <div class="product-selector-mobile" id="productselectormobile">
                          <select id="mobiledropdown" onchange="hashselect();">
                            <option value=""></option>
                            <option value="pb-1000">PB-1000</option>
    
                          </select>
                        </div>
                    </div>
                </div>

                <div class="col-md-7 blog-content-area">

                    <div class="blog-single-wrap">
                        <div class="blog-single-heading cf">
                            <h1 class=""> Speaker Topics </h1>
                        </div>
      
                        {% for article in blog.articles %}<br/>
                      
                      {{ article.title }}
                          

                        {% endfor %}

                        <a class="view-all-blog-posts" href="#"> View All <i class="fa fa-angle-double-right"></i> </a>
                    </div>
                    <div class="blog-single-wrap">
                        <div class="blog-single-heading cf">
                            <h1 class=""> Subwoofer Topics </h1>
                        </div>

                        {% assign: my_limit = 2 %}
                        {% assign: loops = 0 %}
                        {% for article in blogs.svs.articles %}
                            {% if article.tags contains "subwoofer-topic"  %}
                            {% assign: loops = loops | plus: 1 %}
                                <div class="blog-post cf">
                                    <div class="blog-thumbnail-wrap col-sm-3">
                                        <img src="{{ article | img_url: 'large' }}" class="blog-thumbnail">
                                    </div>

                                    <div class="post-content-wrap col-sm-9">
                                        <h2>
                                            <a href="{% if article.metafields.blog.link %}{{ article.metafields.blog.link }} {% else %}{{ article.url }}{% endif %}" onclick="ga('send', 'event', 'Blogs', 'Click', 'Article List - {{ article.title }}')">{{ article.title }}</a>
                                        </h2>
                                        <p> {{ article.excerpt_or_content | strip_html | truncate: 100 }} </p>
                                        <a href="{% if article.metafields.blog.link %}{{ article.metafields.blog.link }} {% else %}{{ article.url }}{% endif %}" onclick="ga('send', 'event', 'Blogs', 'Click', 'Article Read More - {{ article.title }}')" class="read-more"> Read More <i class="fa fa-angle-double-right"></i> </a>
                                    </div>
                                </div>
                            {% else %}
                            {% endif %}
                            {% if loops >= my_limit %}
                            {% break %}
                            {% endif %}
                        {% endfor %}
                        <a class="view-all-blog-posts" href="#"> View All <i class="fa fa-angle-double-right"></i> </a>
                    </div>

