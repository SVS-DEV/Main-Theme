  var nocomparelist = "";
  var $checkbox = $(this);
$.each($('.wk_title'), function () { 
  
  if($(this).is(':contains("Prime Tower")'))  {
	  nocomparelist += 'Prime Tower <br>'
			}
			else if($(this).is(':contains("Prime Bookshelf")')) {
				nocomparelist += 'Prime Bookshelf <br>'
				}
				else if($(this).is(':contains("Prime Center")')) {
					nocomparelist += 'Prime Center <br>'
					}
					else if($(this).is(':contains("Prime Satellite")')) {
						nocomparelist += 'Prime Satellite <br>'
						}
						else if($(this).is(':contains("Ultra Tower")')) {
							nocomparelist += 'Ultra Tower <br>'
							}
							else if($(this).is(':contains("Ultra Bookshelf")')) {
								nocomparelist += 'Ultra Bookshelf <br>'
								}
								else if($(this).is(':contains("Ultra Center")')) {
									nocomparelist += 'Ultra Center <br>'
									}
									else if($(this).is(':contains("Ultra Surround")')) {
										nocomparelist += 'Ultra Surround <br>'
										}
										else if($(this).is(':contains("Prime Elevation")')) {
											nocomparelist += 'Prime Elevation <br>'
											}

});
  if (nocomparelist !=""){
    WK_PC.showPopup('Oops! Weâ€™re not able to compare speakers and subwoofers','Please remove:<br><br>' + nocomparelist);
    setTimeout(function() {
      $checkbox.removeAttr('checked');
    }, 0);
    event.preventDefault();
    event.stopPropagation();
	}
};
	var checkExist = setInterval(function() {
		if ($(".wk_product_comparison input[type='checkbox']").length) {
			
			$(".wk_product_comparison input[type='checkbox']").click(function(){ comparedeny(); });
			clearInterval(checkExist);
			}
			}, 500); // check every 100ms
  
  $( ".wk_image" ).before( "<span class='clearall' onclick='wkErase()' id='clearall' style='color:#ff4500;cursor:pointer'>Remove all products</span>" );
			
</script>